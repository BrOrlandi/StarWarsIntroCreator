$greenShadow = #45f500;

$formBackgroundColor = lighten(black, 2%)

$inputBorderColor = alpha($titlesColor, .2);
$inputBorderColorHover = alpha($titlesColor, .5);
$inputBorderColorFocus = $titlesColor;

inputStyle() {

  $inputBorder = 3px solid $inputBorderColor;

  transition: border-color .3s ease-out;
  padding: .3em;
  outline: 0;
  border: $inputBorder;
  border-radius: 3px;
  background-color: $formBackgroundColor;


  &:hover{
    border-color: $inputBorderColorHover;
  }

  &:active, &:focus {
    border-color: $inputBorderColorFocus;
  }
}

$marginTopFormInput = 20px;


$actionButtonStyle {
  outline: 0;
  border: 0;
  background: transparent;
  color: $titlesColor;
  text-shadow: none;
  font-size: 50px;
  font-family: StarWars;
  cursor: pointer;
  transition: text-shadow .5s ease-out;

  &:focus, &:hover {
    text-shadow: -1px 1px 8px $greenShadow, 1px -1px 8px $greenShadow;
  }
}

// Used only in the Logo input. The text is a outlined SVG Text
// Stroke font-character
// @param  {Integer} $stroke - Stroke width
// @param  {Color}   $color  - Stroke color
// @return {List}            - text-shadow list
stroke($stroke, $color) {
  $shadow = ();
  $from = $stroke * -1;
  $range = ($from)..($stroke);
  for $i in $range {
    for $j in $range {
      append($shadow, ($i)px ($j)px 0 $color);
      append($shadow, \,);
    }
  }
  pop($shadow)
  $shadow;
}

body.runningVideo {
  #configForm {
    display: none;
  }
}

#configForm {
  display: flex;
  justify-content: center;
  color: $titlesColor;

  #pageTitle{
    text-align: center;
    font-size: 48px;
    font-family: StarWars;
    line-height: 100%;
  }

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 500px;
    font-family: Arial, Helvetica, sans-serif;

    input, textarea {
      overflow-x: hidden;
      margin-top: $marginTopFormInput;
      margin-bottom: 0;
      width: 97%;
      color: $titlesColor;
      word-break: break-word;

      inputStyle();
    }

    textarea {
      font-family: Arial, Helvetica, sans-serif;
      resize: none;

      &#f-logo {
        width: calc(97% - 22px);
        height: 92px;
        color: black;
        text-shadow: stroke(2, $titlesColor);
        font-size: 50px;
        font-family: StarWars;
        line-height: 86%;
        caret-color: $titlesColor; // partial support https://caniuse.com/#search=caret-color
      }
    }

    #playButton {
      @extend $actionButtonStyle;
    }

    #downloadButton {
      @extend $actionButtonStyle;

      display: none;
      margin-bottom: 30px;
      font-size: 60px;
      animation: pulseDownloadButton 3s ease 0s infinite;

      &:focus, &:hover {
        text-shadow: -1px 1px 93px $greenShadow, 1px -1px 23px $greenShadow;
        animation: none;
      }
    }

    #f-intro {
      color: $introColor;
      font-family: Arial;
    }

    #f-text {
      height: 200px;
    }

    #f-logo, #f-title, #f-episode {
      text-align: center;
    }

    .center-checkbox {
      margin-top: $marginTopFormInput;
      user-select: none;

      label {
        display: inline;
        vertical-align: middle;
        font-size: 14px;
        cursor: pointer;
      }

      .regular-checkbox {
        display: none;

        &+label {
          inputStyle();
          width: 9px;
          height: 9px;
          border-radius: 3px;
          display: inline-block;
        }

        &:checked + label:after {
          cursor: pointer;
          content: '\274C';
          font-size: 14px;
          letter-spacing: 0;
          color: $titlesColor;
          position: relative;
          top: -4px;
        }
      }

    }
  }
}

@keyframes pulseDownloadButton {
    0%{
        text-shadow: none;
    }

    40%{
        text-shadow: -1px 1px 93px $greenShadow, 1px -1px 23px $greenShadow;
    }

    60%{
        text-shadow: -1px 1px 93px $greenShadow, 1px -1px 23px $greenShadow;
    }

    100%{
        text-shadow: none;
    }
}