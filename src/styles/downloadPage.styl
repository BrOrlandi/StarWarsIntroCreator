#downloadPage {
  display: none;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: Arial, Helvetica, sans-serif;

  .panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px 50px 35px;
    max-width: 600px;
    width: 60%;
    border: 2px solid $alertTextColor;
    border-radius: 3px;
    background-color: $formBackgroundColor;
    letter-spacing: .05em;

    h2 {
      starWarsFontStyle();
    }

    a {
      color: $titlesColor;
    }

    button {
      buttonStyle();
    }

    .donateOrNotDonateButtons {
      display: flex;
      justify-content: center;
    }
  }
}