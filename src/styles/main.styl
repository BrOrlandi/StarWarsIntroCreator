@import './partials/NewsCycleFont.css';

@font-face {
  font-family: StarWars;
  src: url('./fonts/Starjedi.ttf');
}

@font-face {
  font-family: StarWarsTitle;
  src: url('./fonts/SWCrawlTitle2.ttf');
}


$timeFactor = 1;
$introColor = #4bd5ee;
$titlesColor = #ffd54e;

html,
body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: url('../assets/bg-stars.png') repeat;
    background-color: black;
    color: $titlesColor;
}

.verticalWrapper{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

@import './configForm.styl';
@import './bb8.css';
@import './animation.styl';

.hide {
  display: none;
}