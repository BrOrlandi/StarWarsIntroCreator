@import './fonts/NewsCycleFont.css';

@font-face {
  font-family: StarWars;
  src: url('./fonts/Starjedi.ttf');
}

@font-face {
  font-family: StarWarsTitle;
  src: url('./fonts/SWCrawlTitle2.ttf');
}

starWarsFontStyle() {
  color: $titlesColor;
  letter-spacing: 3px;
  font-family: StarWars;
  line-height: 1.1em;
}

$defaultFontFamily = Arial, Helvetica, sans-serif;

// media queries
$HD = '(max-height: 720px)';

// variables
$timeFactor = 1;
$introColor = #4bd5ee;
$titlesColor = #ffd54e;

html,
body {
    display: initial;
    margin: 0;
    width: 100%;
    height: 100%;
    background: url('../assets/bg-stars.png') repeat;
    background-color: black;
    color: $titlesColor;
}

.verticalWrapper{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

@import './configForm.styl';
@import './bb8.css';
@import './animation.styl';
@import './footer.styl';
@import './sweetalert.styl';

.hide {
  display: none;
}

.noselect {
  user-select: none;
}

#bb8-loading {
  display: none;
}

body.loading {
  #bb8-loading {
    display: block;
  }

  #configForm {
    display: none;
  }

  footer {
    display: none;
  }
}

#requestFocusButton {
  display: none;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;

  > div {
    @extend $actionButtonStyle;
  }
}

body.requestFocus {
  #requestFocusButton {
    display: flex;
  }

  #configForm {
    display: none;
  }

  footer {
    display: none;
  }
}