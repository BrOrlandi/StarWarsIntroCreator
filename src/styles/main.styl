@import './fonts/NewsCycleFont.css';

@font-face {
  font-family: StarWars;
  src: url('./fonts/Starjedi.ttf');
}

@font-face {
  font-family: StarWarsTitle;
  src: url('./fonts/SWCrawlTitle2.ttf');
}

starWarsFontStyle() {
  color: $titlesColor;
  letter-spacing: 3px;
  font-family: StarWars;
  line-height: 1.1em;
}

$defaultFontFamily = Arial, Helvetica, sans-serif;

// media queries
$HD = '(max-height: 720px)';

// variables
$timeFactor = 1;
$timeFactor = 1/16;
$introColor = #4bd5ee;
$titlesColor = #ffd54e;

$formBackgroundColor = lighten(black, 2%)

$buttonHoverColor = lighten($formBackgroundColor, 20%);
$buttonFocusColor = lighten($formBackgroundColor, 40%);

$errorRed = #ab0000;
$alertTextColor = #d0ad3e;
$warningYellow = $alertTextColor;

html,
body {
    display: initial;
    margin: 0;
    width: 100%;
    height: 100%;
    background: url('../assets/bg-stars.png') repeat;
    background-color: black;
    color: $titlesColor;
}

h1 {
  font-size: 3em;
}

h2 {
  font-size: 2em;
}

iframe{
    border: none;
}

.verticalWrapper{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

@keyframes fadeinAnimation {
    from {
      visibility: hidden;
      opacity: 0;
    }

    to   {
      visibility: visible;
      opacity: 1;
    }
}

@keyframes fadeoutAnimation {
    from {
      visibility: visible;
      opacity: 1;
    }

    to   {
      visibility: hidden;
      opacity: 0;
    }
}

fadeIn($delay = 0s, $fadeDuration = 500ms) {
  animation: fadeinAnimation $fadeDuration linear $delay forwards;
}

fadeOut($delay = 0s, $fadeDuration = 500ms) {
  animation: fadeoutAnimation $fadeDuration linear $delay forwards;
}

