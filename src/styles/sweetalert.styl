.starwars-sweetalert {
  border: 2px solid $alertTextColor;
  background-color: $formBackgroundColor;

  .swal2-title {
    starWarsFontStyle();
    margin-bottom: 1em;
    color: $alertTextColor;
  }

  .swal2-content{
    margin-bottom: 1em;
    color: $alertTextColor;
    font-family: $defaultFontFamily;
  }

  button {
    buttonStyle();
  }

  .swal2-icon {
    &.swal2-error {
      border-color: $errorRed;
      .swal2-x-mark {
        span {
          background-color: $errorRed;
        }
      }
    }

    &.swal2-warning {
      border-color: $warningYellow;
      .swal2-icon-text{
        color: $warningYellow;
      }
    }
  }
}