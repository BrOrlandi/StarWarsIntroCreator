.starwarsAnimation {
  display: none;
  letter-spacing:.15em;
  // font: 700 1em 'News Cycle', sans-serif;

  .introBackground {
      position: absolute;
      top: 0;
      left: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      background-color: black;
      opacity: 0;
      animation: introBackgroundAnimation 9s * $timeFactor;

      .intro {
        padding: 0 100px;
        color: $introColor;
        font-weight: 400;
        font-size: 500%;
        font-family: Arial;
        opacity: 0;
        animation: introTextAnimation 6s * $timeFactor ease-out 1s * $timeFactor;

        @media $HD{
          font-size: 350%; // TODO: try to use vw unit
        }
      }
  }

  #backgroundSpace {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4100px;
    background: url('../assets/bg-stars.png') repeat;

    #deathstar {
      position: absolute;
      right: 100px;
      bottom: 1150px;
      width: 655px;
      height: 663px;

      &.centerCustom { // not used, but can be for customizations
        right: 0;
        left: 0;
        margin: auto;
      }
    }
  }

}


 // background scroll at the end
body.runningVideo {
  overflow: hidden;

  .starwarsAnimation {
    display: initial;
  }

  #backgroundSpace {
    animation: scrolldown 7s * $timeFactor 86s * $timeFactor forwards;
  }
}

@keyframes introTextAnimation {
  0% {
    opacity: 0;
  }
    20% {
    opacity: 1;
  }
    90% {
    opacity: 1;
  }
    100% {
    opacity: 0;
  }
}

@keyframes introBackgroundAnimation {
    0% {
    opacity: 1;
  }
  100% {
      opacity: 1;
    }
}

@keyframes scrolldown {
  0% {
      transform: translateY(0);
  }
  100% {
      transform: translateY(-2200px);
  }
}