

.starwarsAnimation {

  #backgroundSpace {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4100px;
    background: url('../assets/bg-stars.png') repeat;

    #deathstar {
      position: absolute;
      right: 100px;
      bottom: 1150px;
      width: 655px;
      height: 663px;

      &.centerCustom { // not used, but can be for customizations
        right: 0;
        left: 0;
        margin: auto;
      }
    }
  }

}


 // background scroll at the end
body.runningVideo {
    overflow: hidden;
    #backgroundSpace {
      animation: scrolldown 7s * $timeFactor 86s * $timeFactor forwards;
    }
}

@keyframes scrolldown {
  0% {
      transform: translateY(0);
  }
  100% {
      transform: translateY(-2200px);
  }
}